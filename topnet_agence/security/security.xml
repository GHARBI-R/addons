<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--category groups - actors activity request-->
    <record id="actors_activity_request" model="ir.module.category">
        <field name="name">Actors</field>
        <field name="description">Actors activity Request</field>
    </record>

    <!--    Agent-->
    <record id="agent" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="actors_activity_request"/>

    </record>

    <!--    Chef d'agence-->
    <record id="chef_agence" model="res.groups">
        <field name="name">Chef d'agence</field>
        <field name="category_id" ref="actors_activity_request"/>
    </record>

    <!--    Responsable agence-->
    <record id="responsable_agence" model="res.groups">
        <field name="name">Responsable agence</field>
        <field name="category_id" ref="actors_activity_request"/>
    </record>

    <!--    Client -->
    <record id="client" model="res.groups">
        <field name="name">Client</field>
        <field name="category_id" ref="actors_activity_request"/>
    </record>

    <record model="ir.rule" id="activity_request_rule_manager_director1">
        <field name="name">activity request New</field>
        <field name="model_id" ref="model_activity_request"/>
        <field name="domain_force">[('state', 'in', ['new','improved','confirmed','refused','editRequest'])]</field>
        <field name="groups" eval="[(4, ref('manager_director'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
    </record>

     <record model="ir.rule" id="activity_request_rule_executive_director">
        <field name="name">activity request improved</field>
        <field name="model_id" ref="model_activity_request"/>
        <field name="domain_force">[('state', 'in', ['improved','confirmed','refused','validated'])]</field>
        <field name="groups" eval="[(4, ref('executive_director'))]"/>
        <field name="perm_read" eval="True"/>
    </record>

    <record model="ir.rule" id="activity_request_rule_secretary_general">
        <field name="name">activity request validated</field>
        <field name="model_id" ref="model_activity_request"/>
        <field name="domain_force">[('state', 'in', ['validated','confirmed','refused'])]</field>
        <field name="groups" eval="[(4, ref('secretary_general'))]"/>
        <field name="perm_read" eval="True"/>
    </record>

</odoo>